---
const { path } = Astro.props;
const distPath = path;
---
<!--begin::Header-->
<nav class="app-header navbar navbar-expand bg-body custom-navbar" style="background-color: rgba(26, 54, 93, 1);">

<style>
  .custom-navbar {
    background-color: rgba(26, 54, 93, 1) !important;
    min-height: 56px; /* Altura fija para el navbar */
  }
  
  /* Estilos para los íconos */
  .custom-navbar .nav-link img {
    width: 20px;
    height: 20px;
    object-fit: contain;
    vertical-align: middle;
  }
  
  /* Ajuste para los elementos del navbar */
  .navbar-nav {
    align-items: center;
  }
  
  /* Espaciado entre íconos */
  .nav-item {
    margin: 0 5px;
  }
</style>

<!--begin::Container-->
<div class="container-fluid" style="background-color: rgba(26, 54, 93, 1);">
  <!--begin::Start Navbar Links-->
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
        <i class="bi bi-list"></i>
      </a>
    </li>
  </ul>
  <!--end::Start Navbar Links-->
  <!--begin::End Navbar Links-->
  <ul class="navbar-nav ms-auto align-items-center">
<li class="nav-item dropdown">
  <a class="nav-link p-0" title="Notificaciones" style="display: inline-flex; align-items: center;">
    <img src="https://img.icons8.com/?size=100&id=I70UG93yOQPc&format=png&color=FAB005" 
         alt="bell" 
         style="width:20px;height:20px; display: block;">
  </a>
</li>

<li class="nav-item dropdown">
  <a class="nav-link p-0" href="/configuracion.html" title="Configuration" style="display: inline-flex; align-items: center;">
    <img src="https://img.icons8.com/?size=100&id=M9s3DeMEWotE&format=png&color=FFFFFF" 
         alt="Configuration" 
         style="width:25px;height:25px; display: block;">
  </a>
</li>

    <!-- Fullscreen Toggle -->
    <li class="nav-item">
      <a class="nav-link p-1" href="#" data-lte-toggle="fullscreen">
        <i data-lte-icon="mximize" class="bi bi-arrows-fullscreen" style="font-size:1rem;"></i>
        <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display:none;font-size:1rem;"></i>
      </a>
    </li>

    <!-- User Menu -->
    <li class="nav-item dropdown user-menu">
      <a href="#" class="nav-link dropdown-toggle p-1" data-bs-toggle="dropdown">
        <img src={distPath + "/assets/img/user2-160x160.jpg"}
             class="user-image rounded-circle shadow"
             alt="User Image"
             style="width:30px;height:30px;"/>
        <span class="d-none d-md-inline">Admin</span>
      </a>
      <!-- Dropdown menu aquí -->
    </li>
  </ul>
  <!--end::End Navbar Links-->
</div>
<!--end::Container-->
</nav>
<!--end::Header-->