---
//  ⬅︎ tu front-matter original se queda igual
import Head     from "@components/_head.astro";
import Scripts  from "@components/_scripts.astro";

const title    = "AdminLTE 4 | Login Page";
const path     = "../../../dist";
const htmlPath = "..";
---
<!DOCTYPE html>
<html lang="es">               <!-- idioma a ES -->
  <head>
    <Head title={title} path={path} />
    <!-- Iconos Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Volkhov:wght@700&display=swap" rel="stylesheet">
    <!-- ⬇︎ Estilos propios -->
    <style>
      /* …los verás en la sección 2 ↴ */
    </style>
  </head>
<style>
  /********  layout general  ********/
html,body{
  width:100%;height:100%;margin:0;
  font-family:system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial,sans-serif;
}


.login-page {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 0;
  overflow: hidden;
}

.login-page::before {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.4)), url('fondoLogin (1).jpg') no-repeat center/cover fixed;
  z-index: -1;
}


.login-wrapper{
  width:100%;max-width:450px;padding:1rem;position:relative;
}

/********  tarjeta  ********/
.login-card{
  position:relative;
  padding:4.5rem 2.5rem 3rem;            /* hueco extra arriba p/ avatar */
  border-radius:12px;
  background:#fff;
}
.login-card::before{                     /* bordes oscuros ligeros (opcional) */
  content:"";position:absolute;inset:0;
  border:2px solid #1e2d4d;border-radius:inherit;pointer-events:none;
}

/********  avatar  ********/
.avatar-circle{
  position:absolute;top:0;left:50%;
  transform:translate(-50%,-50%);
  width:110px;height:110px;
  border-radius:50%;
  display:flex;align-items:center;justify-content:center;
  background:linear-gradient(#4b7cf3,#1e2d4d);
  border:6px solid #fff;
  box-shadow:0 4px 14px #0003;
  font-size:3rem;color:#fff;
}

/********  campos  ********/
.login-input{
  background:#dfe7ff;
  border:2px solid #9bb0e0;
  border-radius:8px;
  font-weight:600;
}
.login-input::placeholder{color:#56627a;font-weight:500;}

/********  botón  ********/
.btn-login{
  background:#1e2d4d;
  font-weight:700;font-size:1.2rem;
  border-radius:8px;border:none;
  color: #fff;
}
.btn-login:hover{background:#29437a;}

.logo-title {
  font-family: 'Volkhov', serif;
  font-size: 5rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 3rem;
  color: #ffff
}


</style>
  <body class="login-page">
    <div class="logo-title">GM&amp;V</div>

    <!-- Contenedor central -->
    <div class="login-wrapper">


      <div class="card login-card shadow">
        <!-- Avatar flotante -->
        <div class="avatar-circle">
          <i class="bi bi-person-fill"></i>
        </div>

        <!-- Cuerpo de la tarjeta -->
        <div class="card-body">
   <!-- Si tu login está en /examples/login.html y el index en raíz -->
<form action="../../index.html" method="get">
            <div class="mb-3">
              <input type="email" class="form-control login-input" placeholder="Correo" required>
            </div>
            <div class="mb-4">
              <input type="password" class="form-control login-input" placeholder="Contraseña" required>
            </div>

            <button 
            
            class="btn btn-login w-100" type="submit">
              Iniciar Sesión
            </button>
          </form>
        </div>
      </div>
    </div>

    <Scripts path={path} />
  </body>
</html>
