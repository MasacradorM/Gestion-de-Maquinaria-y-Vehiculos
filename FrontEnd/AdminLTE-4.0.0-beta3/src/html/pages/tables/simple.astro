  /* ESTILOS BASE (CSS puro) */
  .filtros {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20px;
    align-items: center;
  }
  
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    
    .page-item.active .page-link {
      background-color: $primary-color;
      border-color: $primary-color;
    }
